    <!-- Light base activity theme -->
    <style name="ActivityTheme.ActionBar.Lite.NoActionBar" parent="ActivityTheme.NoActionBar">
        <item name="colorPrimary">@color/themeBackgroundCardColor</item>
        <item name="colorPrimaryDark">@color/themeBackgroundCardColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="theme">@style/Toolbar.AppBarOverlay.Lite</item>
        <item name="popupTheme">@style/Toolbar.AppBarOverlay.Lite</item>
        <item name="iconTint">@color/themeTextColor</item><!-- Menu Icon change color-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/themeBackgroundCardColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/windowLightStatusBarColor</item><!-- Status bar text and Icon color change-->
        <item name="tabStyle">@style/ActivityTheme.ActionBar.TabStyle</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="ActivityTheme.ActionBar.TabStyle" parent="@style/Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Toolbar.TabTextAppearance</item>
        <item name="tabIndicatorColor">@color/themeTitleColor</item>
        <item name="tabTextColor">@color/themeTextColorLite</item>
        <item name="tabSelectedTextColor">@color/themeTitleColor</item>
        <item name="textAllCaps">false</item>
        <item name="tabPadding">0dp</item>
    </style>

    <style name="Toolbar.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Toolbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Toolbar.AppBarOverlay.Lite" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.PopupOverlay.Lite" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Toolbar.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <!--dialog background-->
        <item name="android:windowBackground">@color/themeBackgroundCardColor</item>

        <item name="android:background">@color/themeBackgroundCardColor</item>
        <item name="android:textColor">@color/themeTextColor</item>
        <item name="android:textColorPrimary">@color/themeTextColor</item>
        <item name="android:textColorSecondary">@color/themeTextColor</item>
        <item name="textColorAlertDialogListItem">@color/themeTextColor</item>
    </style>

    <style name="DialogThemeFullScreen" parent="DialogTheme">
        <!--also use value 100% for full screen-->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="background">?android:selectableItemBackground</item>
        <item name="android:popupBackground">@color/themeBackgroundCardColor</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@color/themeDividerColorDark</item>
        <item name="android:textColor">@color/themeTextColor</item>
    </style>

    <style name="SpinnerStyleDropDown" parent="@style/ThemeOverlay.AppCompat.Light"/>

    <style name="PopupMenuStyle" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/themeBackgroundCardColor</item>
        <item name="android:background">@color/themeBackgroundCardColor</item>
        <item name="android:textColor">@color/themeTextColor</item>
        <item name="android:textColorPrimary">@color/themeTextColor</item>
        <item name="android:textColorSecondary">@color/themeTextColor</item>
        <item name="textColorAlertDialogListItem">@color/themeTextColor</item>
    </style>

    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/themeBackgroundCardColor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar.TextAppearance.Large" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/actionBarSizeLarge</item>
    </style>

    <style name="Toolbar.TextAppearance.Medium" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/actionBarSizeMedium</item>
    </style>

    <style name="Toolbar.TextAppearance.Small" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/actionBarSizeSmall</item>
    </style>

